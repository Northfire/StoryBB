{{#if context.saved_successful}}
    <div class="infobox">{{txt.settings_saved}}</div>
{{/if}}
	<div id="admin_form_wrapper">
		<div class="cat_bar">
			<h3 class="catbg">{{txt.registration_agreement}}</h3>
		</div>

{{#if context.warning}}
		<p class="error">{{context.warning}}</p>
{{/if}}
		<div class="windowbg2 noup" id="registration_agreement">
{{#if (gt (count context.editable_agreements) 1)}}
    		<div class="cat_bar">
				<h3 class="catbg">{{txt.language_configuration}}</h3>
			</div>
			<div class="information">
				<form action="{{scripturl}}?action=admin;area=regcenter" id="change_reg" method="post" accept-charset="UTF-8" style="display: inline;">
					<strong>{{txt.admin_agreement_select_language}}:</strong>&nbsp;
					<select name="agree_lang" onchange="document.getElementById(\'change_reg\').submit();">

	{{#each context.editable_agreements}}
						<option value="{{@key}}"{{#if (eq context.current_agreement @key)}} selected{{/if}}>{{.}}</option>
    {{/each}}
					</select>
					<div class="righttext">
						<input type="hidden" name="sa" value="agreement">
						{{session_form}}
						{{token_form 'admin-rega'}}
						<input type="submit" name="change" value="{{txt.admin_agreement_select_language_change}}" class="button_submit">
					</div>
				</form>
			</div>
{{/if}}
			<form action="{{scripturl}}?action=admin;area=regcenter" method="post" accept-charset="UTF-8">
				<textarea cols="70" rows="20" name="agreement" id="agreement">{{context.agreement}}</textarea>
				<p>
					<label for="requireAgreement"><input type="checkbox" name="requireAgreement" id="requireAgreement" {{#if context.require_agreement}} checked{{/if}} value="1" class="input_check">{{txt.admin_agreement}}.</label>
				</p>
				<input type="submit" value="'{{txt.save}}" class="button_submit">
				<input type="hidden" name="agree_lang" value="{{context.current_agreement}}">
				<input type="hidden" name="sa" value="agreement">
				{{session_form}}
				{{token_form 'admin-rega'}}
			</form>
		</div>
	</div>
