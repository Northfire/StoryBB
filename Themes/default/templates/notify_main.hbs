<div class="cat_bar">
	<h3 class="catbg">
		<span class="generic_icons mail icon"></span>
		{{txt.notify}}
	</h3>
</div>
<div class="roundframe centertext">
	<p>{{#if context.notification_set}}{{txt.notify_deactivate}}{{else}}{{txt.notify_request}}{{/if}}</p>
	<p>
		<strong><a href="{{scripturl}}?action=notify;sa={{#if context.notification_set}}off{{else}}on{{/if}};topic={{context.current_topic}}.{{context.start}};{{context.session_var}}={{context.session_id}}">{{txt.yes}}</a> - <a href="{{context.topic_href}}">{{txt.no}}</a></strong>
	</p>
</div>